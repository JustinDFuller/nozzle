{
    "run": {
        "go": "1.23.1",
        "modules-download-mode": "readonly"
    },
    "output": {
        "sort-results": true,
        "sort-order": "file",
        "show-stats": true
    },
    "linters": {
        "enable-all": true,
        "disable": [
            "gomnd",
            "execinquery",
            "lll",
            "exhaustruct",
            "funlen",
            "gocognit",
            "cyclop",
            "maintidx",
            "dupl"
        ]
    },
    "issues": {
        "fix": false,
        "max-issues-per-linter": 0,
        "max-same-issues": 0
    },
    "linters-settings": {
        "wsl": {
          "allow-cuddle-declarations": true
        },
        "mnd": {
            "ignored-numbers": [
                "0",
                "100",
                "2"
            ]
        },
        "varnamelen": {
            "max-distance": 20,
            "ignore-decls": [
              "wg sync.WaitGroup"
            ]
        },
        "depguard": {
            "rules": {
                "main": {
                    "allow": [
                        "$gostd",
                        "github.com/justindfuller/nozzle",
                        "golang.org/x/time/rate"
                    ]
                }
            }
        }
    }
}
