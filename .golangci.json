{
    "version": "2",
    "run": {
        "go": "1.23.1",
        "modules-download-mode": "readonly"
    },
    "output": {
        "show-stats": true,
        "sort-order": ["file"]
    },
    "linters": {
        "default": "all",
        "disable": [
            "lll",
            "exhaustruct",
            "funlen",
            "gocognit",
            "cyclop",
            "maintidx",
            "dupl",
            "ireturn",
            "nilnil",
            "testableexamples",
            "noinlineerr",
            "wsl"
        ],
        "settings": {
            "depguard": {
                "rules": {
                    "main": {
                        "allow": [
                            "$gostd",
                            "github.com/justindfuller/nozzle",
                            "golang.org/x/time/rate"
                        ]
                    }
                }
            },
            "wsl_v5": {
                "allow-first-in-block": true,
                "allow-whole-block": false,
                "branch-max-lines": 2
            },
            "mnd": {
                "ignored-numbers": [
                    "0",
                    "100",
                    "2"
                ]
            },
            "varnamelen": {
                "max-distance": 20,
                "ignore-decls": [
                    "wg sync.WaitGroup"
                ]
            }
        }
    },
    "issues": {
        "fix": false,
        "max-issues-per-linter": 0,
        "max-same-issues": 0
    }
}